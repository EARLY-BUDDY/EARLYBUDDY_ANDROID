<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/act_main_btn_calendar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="캘린더" />

    <Button
        android:id="@+id/act_main_btn_home"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="홈" />

    <Button
        android:id="@+id/act_main_btn_schedule_write"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="일정 등록" />

    <Button
        android:id="@+id/act_main_btn_placeSearch"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="장소 검색" />

    <Button
        android:id="@+id/act_main_btn_signIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="로그인" />

    <Button
        android:id="@+id/act_main_btn_signUp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="회원가입" />

    <Button
        android:id="@+id/act_main_btn_test"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="경로테스트" />

    <Button
        android:id="@+id/act_main_btn_initial"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="최초가입" />
    <Button
        android:id="@+id/act_main_btn_initial_place"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="최초장소선택" />

</LinearLayout>