<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.earlyBuddy.earlybuddy_android.ui.home.beforeBus.BeforeBusViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frag_home_before_bus_cl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/frag_home_before_bus_iv_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="360:264"
                android:src="@drawable/img_bg_threebus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/frag_home_before_bus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="23dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="10dp"
                android:text="@{`앞으로 남은 `+vm.trafficType+` `+vm.lastTransCount+`대!\n`+vm.lastsSentence}"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/frag_home_before_bus_tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="11dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:text="@{vm.trafficType.substring(0,vm.trafficType.length()-1) +` 도착까지`}"
                android:textColor="@color/black"
                android:textSize="23dp"
                app:layout_constraintBottom_toTopOf="@+id/frag_home_before_bus__cl_number"
                app:layout_constraintStart_toStartOf="@+id/frag_home_before_bus_text" />

            <TextView
                android:id="@+id/frag_home_before_bus_tv_arriveSoon"
                remainingMinuteSetVisible="@{vm.remainingMinute}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="end"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="24sp"
                android:text="곧 도착"
                android:textColor="#ff6e6e"
                android:textSize="50sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@id/frag_home_before_bus__tv_next_time"
                app:layout_constraintEnd_toEndOf="@id/frag_home_before_bus__view_center" />

            <TextView
                android:id="@+id/frag_home_before_bus_tv_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="11dp"
                changeText="@{false}"
                remainingMinuteSetHide="@{vm.remainingMinute}"
                android:text="분 전"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus_tv_next"
                app:layout_constraintEnd_toEndOf="@id/frag_home_before_bus__view_center" />

            <TextView
                changeText="@{true}"
                android:id="@+id/frag_home_before_bus_tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                remainingMinuteSetHide="@{vm.remainingMinute}"
                android:lineSpacingExtra="38dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:visibility="visible"
                android:text="@{String.valueOf(vm.arriveMinuteDifference)}"
                android:textColor="@color/black"
                android:textSize="85dp"
                android:layout_marginBottom="7.5dp"
                app:layout_constraintBottom_toBottomOf="@+id/frag_home_before_bus__cl_number"
                app:layout_constraintEnd_toStartOf="@id/frag_home_before_bus_tv_before" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_home_before_bus__cl_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.5dp"
                changeTint="@{vm.tints}"
                android:background="@drawable/bus_subway_number_cl"
                app:layout_constraintBottom_toTopOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center">

                <TextView
                    android:id="@+id/frag_home_before_bus__tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="0dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textSize="12dp"
                    android:layout_marginBottom="1dp"
                    android:text="@{vm.trafficNumber}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/frag_home_before_bus__tv_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="6dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:ems="7"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:text="@{vm.homeResponse.data.firstTrans.startName}"
                android:textColor="@color/gray"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintStart_toEndOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__cl_number" />


            <ImageView
                android:id="@+id/frag_home_before_bus__iv_reboot"
                app:layout_constraintEnd_toEndOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__cl_number"
                android:src="@drawable/ic_reboot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:lineSpacingExtra="6dp"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintEnd_toStartOf="@id/frag_home_before_bus__iv_reboot"
                android:layout_marginEnd="5dp"
                android:text="@{`다음 배차까지 `+vm.nextArriveMinuteDifference+`분`}" />

            <View
                android:id="@+id/frag_home_before_bus__view_center"
                android:layout_width="0dp"
                android:layout_height="0.2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toTopOf="@+id/frag_home_before_bus_iv_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.80" />

            <ImageView
                android:id="@+id/frag_home_before_bus__iv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36.9dp"
                android:src="@drawable/ic_detail"
                app:layout_constraintEnd_toEndOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@id/frag_home_before_bus__view_center" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_plan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.4dp"
                android:letterSpacing="-0.05"
                android:ems="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:lineSpacingExtra="8dp"
                android:text="@{vm.homeResponse.data.scheduleSummaryData.scheduleName}"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@id/frag_home_before_bus__view_center" />

            <ImageView
                android:id="@+id/frag_home_before_bus__iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_time"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@id/frag_home_before_bus__tv_plan_title" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5.5dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6dp"
                android:text="@{vm.startTime}"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__iv_time"
                app:layout_constraintStart_toEndOf="@id/frag_home_before_bus__iv_time"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__iv_time" />

            <ImageView
                android:id="@+id/frag_home_before_bus__iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.3dp"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@+id/frag_home_before_bus__iv_time" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_plan_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6dp"
                android:ems="8"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="@{vm.homeResponse.data.scheduleSummaryData.endAddress}"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__iv_location"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__tv_plan_time"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__iv_location" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>