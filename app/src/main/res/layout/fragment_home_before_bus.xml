<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frag_home_before_bus_cl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_bg_threebus">

            <TextView
                android:id="@+id/frag_home_before_bus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="23dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="10sp"
                android:text="앞으로 남은 지하철은\n3대야! 천천히 해!"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/frag_home_before_bus_tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="11sp"
                android:text="다음 일정까지"
                android:textColor="@color/black"
                android:textSize="23sp"
                app:layout_constraintBottom_toTopOf="@+id/frag_home_before_bus__cl_number"
                app:layout_constraintStart_toStartOf="@+id/frag_home_before_bus_text" />

            <TextView
                android:id="@+id/frag_home_before_bus_tv_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="11sp"
                android:text="일전"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus_tv_next"
                app:layout_constraintEnd_toEndOf="@id/frag_home_before_bus__view_center" />

            <TextView
                android:id="@+id/frag_home_before_bus_tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="38sp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="85sp"
                android:layout_marginBottom="7.5dp"
                app:layout_constraintBottom_toBottomOf="@+id/frag_home_before_bus__cl_number"
                app:layout_constraintEnd_toStartOf="@id/frag_home_before_bus_tv_before" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_home_before_bus__cl_number"
                android:layout_width="39dp"
                android:layout_height="17dp"
                android:layout_marginBottom="16.5dp"
                android:background="@drawable/bg_25_3092ff"
                app:layout_constraintBottom_toTopOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center">

                <TextView
                    android:id="@+id/frag_home_before_bus__tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:text="2224"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/frag_home_before_bus__tv_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="6sp"
                android:text="테크노마트앞. 강변역"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintStart_toEndOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__cl_number" />


            <ImageView
                android:id="@+id/frag_home_before_bus__iv_reboot"
                app:layout_constraintEnd_toEndOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__cl_number"
                android:src="@drawable/ic_reboot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__cl_number"
                app:layout_constraintEnd_toStartOf="@id/frag_home_before_bus__iv_reboot"
                android:layout_marginEnd="5dp"
                android:text="다음 배차까지 22분" />

            <View
                android:id="@+id/frag_home_before_bus__view_center"
                android:layout_width="0dp"
                android:layout_height="0.2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45" />

            <ImageView
                android:id="@+id/frag_home_before_bus__iv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36.9dp"
                android:src="@drawable/ic_detail"
                app:layout_constraintEnd_toEndOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@id/frag_home_before_bus__view_center" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_plan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.4dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="8sp"
                android:text="SPOT 데모데이"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@id/frag_home_before_bus__view_center" />

            <ImageView
                android:id="@+id/frag_home_before_bus__iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_time"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@id/frag_home_before_bus__tv_plan_title" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5.5dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:text="오후 12:20"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__iv_time"
                app:layout_constraintStart_toEndOf="@id/frag_home_before_bus__iv_time"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__iv_time" />

            <ImageView
                android:id="@+id/frag_home_before_bus__iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.3dp"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__view_center"
                app:layout_constraintTop_toBottomOf="@+id/frag_home_before_bus__iv_time" />

            <TextView
                android:id="@+id/frag_home_before_bus__tv_plan_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:text="오렌지팜 서초센터"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_before_bus__iv_location"
                app:layout_constraintStart_toStartOf="@id/frag_home_before_bus__tv_plan_time"
                app:layout_constraintTop_toTopOf="@id/frag_home_before_bus__iv_location" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>