<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="schedule"
            type="com.earlyBuddy.earlybuddy_android.data.datasource.model.Schedule" />
    </data>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            tools:text="SOPT 데모데이"
            android:text="@{schedule.scheduleName}"
            android:lines="1"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="23sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"
            android:layout_marginHorizontal="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_time" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="25sp"
                    tools:text="오후 12:20"
                    android:layout_marginLeft="3dp"
                    calendarScheduleTime="@{schedule.scheduleStartTime}"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="25sp"
                    tools:text="오렌지팜 서초센터"
                    android:text="@{schedule.endAddress}"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/noto_sans_kr_regular" />
            </LinearLayout>

        </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
</layout>